<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exerciseLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewExerciseId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewExName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/textViewExerciseId"
                android:gravity="center_horizontal|center_vertical"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRepeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewExName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/textViewRepeatsText"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewRepeatsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewExName"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Reps:" />

            <TextView
                android:id="@+id/textViewSetsText"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_below="@id/textViewExName"
                android:layout_toLeftOf="@id/textViewSets"
                android:layout_marginBottom="8dp"
                android:text="Sets:" />

            <TextView
                android:id="@+id/textViewSets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewExName"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="8dp"
                android:text="TextView" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>